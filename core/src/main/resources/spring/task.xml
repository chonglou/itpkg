<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="core.sessionJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="core.job.session"/>
        <property name="targetMethod" value="run"/>
        <property name="concurrent" value="false"/>
    </bean>
    <bean id="core.sessionJobTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean">
        <property name="jobDetail" ref="core.sessionJobDetail"/>
        <property name="startDelay" value="#{60*1000}"/>
        <property name="repeatInterval" value="#{20*60*1000}"/>
    </bean>

    <bean id="core.rssJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="core.job.rss"/>
        <property name="targetMethod" value="run"/>
        <property name="concurrent" value="false"/>
    </bean>
    <bean id="core.rssJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="core.rssJobDetail"/>
        <property name="cronExpression" value="0 0 3 * * ?"/>
    </bean>

    <bean id="core.sitemapJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="core.job.sitemap"/>
        <property name="targetMethod" value="run"/>
        <property name="concurrent" value="false"/>
    </bean>
    <bean id="core.sitemapJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="core.sitemapJobDetail"/>
        <property name="cronExpression" value="0 0 3 * * ?"/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="core.rssJobTrigger"/>
                <ref bean="core.sitemapJobTrigger"/>
                <ref bean="core.sessionJobTrigger"/>
            </list>
        </property>
    </bean>
</beans>